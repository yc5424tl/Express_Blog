    <!-------------FORM: HEADER------------------->
    <form id="form-header" action="/new_post" method="post">

        <div class="form-group" id="select-post-type-div">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">Type</div>
                </div>
                <label class="control-label" for="select-post-dropdown"></label>
                <div class="dropdown form-control dark" id="select-post-dropdown">
                    <button class="btn dropdown-toggle" type="button" id="heard-dropdown-btn" data-toggle="dropdown">
                        Select
                    </button>
                    <div class="dropdown-menu" role="menu">
                        <a class="dropdown-item opt" role="menuitem" id='leanred' name="Today I Learned " href="#">Today I Learned</a>
                        <a class="dropdown-item opt" role="menuitem" id='thought' name="Today I Thought " href="#">Today I Thought</a>
                        <a class="dropdown-item opt" role="menuitem" id='heard'   name="Today I Heard "   href="#">Today I Heard</a>
                        <a class="dropdown-item opt" role="menuitem" id='watched' name="Today I Watched " href="#">Today I Watched</a>
                    </div>
                    <form id="dropdown-selection" name="selection">

                    </form>
                </div>
            </div>
        </div>

        <div class="form-group" id="post-title-div">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">Title</div>
                </div>
                <label class="control-label" for="post-title"></label>
                <input type="text" name="title" class="form-control dark" id="post-title">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label" for="post-body"></label>
            <textarea class="form-control dark" name="body" id="post-body" rows="12"></textarea>
        </div>


        <!-------------END FORM: HEADER--------------->


        <!-------------FORM: HEARD-------------------->
        <div id="form-type-heard" class="form-var">
            <div class="row">
