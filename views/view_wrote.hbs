                        <label class="control-label" for="artist-name"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">Artist</div>
                            </div>
                            <input type="text" name="artist" class="form-control dark" id="artist-name">
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6">
                    <div class="form-group heard-form">
                        <label class="control-label" for="album-title"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">Album</div>
                            </div>
                            <input type="text" name="album" class="form-control dark" id="album-title">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6">
                    <div class="form-group heard-form">
                        <label class="control-label" for="track-title"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">Track</div>
                            </div>
                            <input type="text" name="track" class="form-control dark" id="track-title">
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6">
                    <div class="form-group heard-form">
                        <label class="control-label" for="heard-url"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">URL</div>
                            </div>
                            <input type="url" name="heardUrl" class="form-control dark" id="heard-url">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group heard-form">
                        <label for="rating" class="control-label"></label>
                        <div class="input-group" id="rating-div">
                            <div class="input-group-prepend">
                                <div class="input-group-text" id="rating-text-div">Select Rating 0-10</div>
                            </div>
                            <input id="rating" name="rating" class="form-control dark" type="range" min="0" max="10" value="5" step="1" list="rating-list">
                            <datalist id="rating-list">
                                <option value="0">
                                <option value="1">
                                <option value="2">
                                <option value="3">
                                <option value="4">
                                <option value="5">
                                <option value="6">
                                <option value="7">
                                <option value="8">
                                <option value="9">
                                <option value="10">
                            </datalist> <!--https://developer.mozilla.org/en-US/docs/Web/HTML/Element/input/range -->
                        </div>
                    </div>
                </div>
            </div>
