

<div class="post-container" id="latest-heard">
    {{#if heard}}
        {{#each heard}}

            <h2 class="latest-title">Last Thing I Heard...</h2>

                <a class="post-link" href="heard/{{id}}"><span class="post-title">{{post_title}}</span></a>
                <p class="post-body">{{postPreview post_body}}</p>
                <div class="publication-div">
                    <h5 class="post-publication">Posted by {{post_author}} @ {{date_created}}</h5>
                </div>
                {{#if heard.date_last_edit}}
                    <h5 class="post-last-edit">Edited: {{date_last_edit}}</h5>
                {{/if}}
        {{/each}}
    {{else}}
        <p>No Today I Heard Posts</p>
    {{/if}}
</div>




