


<div>
    {{#if post}}
            <form action="/edit/thought/{{post._id}}" method="post">
                <div class="form-group">
                    <label for="thought-title-input">Title</label>
                    <input class="form-control" type="text" value="{{post.post_title}}" id="thought-title-input" name="postTitle">
                </div>
                <div class="form-group">
                    <label for="thought-body-input">Comment</label>
                    <textarea class="form-control" rows=8 id="thought-body-input" name="postBody">{{post.post_body}}</textarea>
                </div>
                <button type="submit" class="btn btn-outline-dark btn-dark update-btn">UPDATE</button>
            </form>
    {{/if}}
</div>
