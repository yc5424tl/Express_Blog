
<div>
    <form action="/edit/learned/{{post.id}}" method="post">
        <div class="form-group">
            <label for="learned-title-input">Title</label>
            <input name="postTitle" class="form-control" type="text" value="{{post.post_title}}" id="learned-title-input">
        </div>
        <div class="form-group">
            <label for="learned-body-input">Comment</label>
            <textarea name="postBody" class="form-control" rows=8 id="learned-body-input">{{post.post_body}}</textarea>
        </div>
        <div class="update-btn-div">
            <button type="submit" class="btn btn-dark btn-outline-dark update-btn">UPDATE</button>
        </div>
    </form>
</div>

