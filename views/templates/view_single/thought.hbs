

<div id="solo-thought-post">
    {{#if post}}
        <div id="post-thought-title-div">
            <h2 class="post-solo-title">{{post.post_title}}</h2>
        </div>
        <hr>
        <p class="post-solo-body">{{post.post_body}}</p>
        <hr>
        <h6 class="post-publication">Posted {{post.date_created}} by {{post.post_author}}</h6>
        <div class="text-center">
            <form class="thought-crud" action="/crud/thought" method="get">
                <div class="crud btn-group" role="group">
                    <button type=submit id=t-crud-u class="btn btn-dark btn-outline-dark">UPDATE</button>
                    <button type=submit id=t-crud-d class="btn btn-dark btn-outline-dark">REMOVE</button>
                </div>
            </form>
        </div>
        <br>
    {{else}}
        <p>No Post found for ID</p>
    {{/if}}
</div>