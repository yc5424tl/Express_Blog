

<div id="solo-learned-post">
    {{#if post}}
        <h2 class="post-solo-title">{{post.post_title}}</h2>
        <hr>
        <p class="post-solo-body">{{post.post_body}}</p>
        <hr>
        <h6 class="post-publication">Posted {{post.date_created}} by {{post.post_author}}</h6>
        {{#if date_last_edit}}<p class="post-publication">Edited: {{this.date_last_edit}}</p>{{/if}}
        <div class="text-center">
            <form class="learned-crud" action="/edit/learned/{{post.id}}" method="get">
                <div class="crud btn-group" role="group">
                    <button type=submit id=l-crud-u class="btn btn-dark btn-outline-dark">UPDATE</button>
                    <button type=submit id=l-crud-d class="btn btn-dark btn-outline-dark">REMOVE</button>
                </div>
            </form>
        </div>
        <br>
    {{else}}
        <p>No Post found for ID.</p>
    {{/if}}
</div>