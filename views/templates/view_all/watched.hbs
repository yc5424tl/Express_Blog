
<div id="watched-post-list">
    <h2 class="section-title">Today I Watched...</h2>
    {{#if posts}}
        <ul>
            {{#each posts}}
                <li class="watched-post-li">
                    <div class="post-container">
                        <a class="post-link" href="/watched/{{this._id}}"> {{this.post_title}} </a>
                        <p class="post-preview"> {{postPreview post_body}} </p>
                        <h5 class="post-publication"> Posted by {{this.post_author}} @ {{this.date_created}} </h5>

                        {{#if date_last_edit}}
                            <h5 class="post-publication edit">Edited: {{this.date_last_edit}} </h5>
                        {{/if}}

                    </div>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No 'Today I Watched' Posts</p>
    {{/if}}
</div>

