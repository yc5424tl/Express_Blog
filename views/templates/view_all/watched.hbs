
<div id="watched-post-list">
    <h2 class="section-title">Today I Watched...</h2>
    {{#if posts}}
        <ul>
            {{#each posts}}
                <li class="watched-post-li">
                    <div class="post-container">
                        <a class="post-link" href="watched/{{this._id}}">{{this.post_title}}</a>
                        <p class="author-time">
                            Posted by {{this.post_author}} @ {{this.date_created}}</p>
                        {{#if date_last_edit}}Edited: {{this.date_last_edit}}{{/if}}
                    </div>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No 'Today I Watched' Posts</p>
    {{/if}}
</div>

